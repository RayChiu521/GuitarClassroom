<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Account</th>
			<th>Nickname</th>
			<th>Groups</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each_with_index do |user, index| %>
			<tr>
				<td><%= (index + 1) %></td>
				<td><%= link_to user.account, groups_user_path(user), remote: true %></td>
				<td><%= user.nickname %></td>
				<td><%= group_label(user.group_titles) %></td>
			</tr>
		<% end %>
	</tbody>
</table>