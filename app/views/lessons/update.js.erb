<% if @lesson.errors.any? %>
	alert('<%= @lesson.errors.full_messages.to_sentence %>');
<% else %>
	$('#lessonContainer').hide();
	$('#calendarContainer').show();

	calendar.fullCalendar('removeEvents', <%= @lesson.id %>)
					.fullCalendar('renderEvent',
						{
							id: <%= @lesson.id %>,
							title: "<%= @lesson.calendar_title %>",
							start: "<%= @lesson.beginning %>",
							end: "<%= @lesson.ending %>",
							allDay: false
						},
						true // make the event "stick"
					);
<% end %>