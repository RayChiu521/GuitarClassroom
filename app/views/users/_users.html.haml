%table.table.table-striped.table-hover
	%thead
		%tr
			%th #
			%th Account
			%th Nickname
			%th Email
			%th Cellphone
			%th Groups
			%th
	%tbody
		- users.each_with_index do |user, index|
			%tr
				%td= (index + 1)
				%td= link_to user.account, user_path(user)
				%td= user.nickname
				%td= user.email
				%td= user.cellphone
				%td= group_label(user.group_titles)
				%td= link_to 'delete', user_path(user), method: :delete, confirm: "Are you sure?"