
<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

<%= render 'shared/content_title', title: 'Register an account' %>

<%= text_control_group(f, 'account') %>
<%= password_control_group(f, 'password') %>
<%= password_control_group(f, 'password_confirmation') %>
<%= text_control_group(f, 'email') %>
<%= text_control_group(f, 'cellphone') %>

<div class="form-group">
	<div class="col-md-offset-3 col-md-9">
		<%= f.submit "Create", class: "btn btn-success" %>
		<%= link_to "Back", log_in_path, class: "btn btn-default" %>
	</div>
</div>
<%= render 'shared/errors', obj: @user %>

<% end %>