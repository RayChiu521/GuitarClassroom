
= form_for @user, url: {controller: "sessions", action: "create"}, html: {class: "form-horizontal"} do |f|
  = render 'shared/content_title', title: 'Guitar classroom'
  = text_control_group(f, 'account')
  = password_control_group(f, 'password')
  .form-group
    .col-md-offset-3.col-md-9
      = f.submit "Log in", class: "btn btn-success"
      = link_to 'Register', new_user_path, class: "btn btn-default"
  = render 'layouts/messages'