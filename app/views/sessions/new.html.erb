
<%= form_for @user, url: {controller: "sessions", action: "create"}, html: {class: "form-horizontal"} do |f| %>
<fieldset>
  <legend>Guitar classroom</legend>

  <%= text_control_group(f, 'account') %>
  <%= password_control_group(f, 'password') %>

	<div class="control-group">
		<div class="controls">
			<%= f.submit "Log in", class: "btn btn-primary" %>
		</div>
	</div>
  <%= render 'layouts/messages' %>
</fieldset>
<% end %>